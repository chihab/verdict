{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@verdict/core": ["packages/core"],
      "@verdict/cli": ["packages/cli"],
      "@verdict/angular": ["projects/angular"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
